#!/bin/bash

set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop services
        echo "Stopping Redfire Gateway services..."
        systemctl stop redfire-timing.service 2>/dev/null || true
        systemctl stop redfire-gateway.service 2>/dev/null || true
        
        # Disable services
        systemctl disable redfire-timing.service 2>/dev/null || true
        systemctl disable redfire-gateway.service 2>/dev/null || true
        ;;
        
    failed-upgrade)
        ;;
        
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0